<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/menuic"
    android:paddingStart="25dp"
    android:paddingTop="10dp"
    android:paddingEnd="10dp"
    android:paddingBottom="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/nomor"
            android:paddingStart="5dp"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="1. "
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_namabarang"
            android:layout_toRightOf="@+id/nomor"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Nama Barang"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_jumlahbarang"
            android:layout_toRightOf="@+id/tv_namabarang"
            android:gravity="center"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="70"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_rp"
            android:layout_toRightOf="@+id/tv_jumlahbarang"
            android:paddingStart="30dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp."
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_hargabarang"
            android:layout_toRightOf="@+id/tv_rp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100,000"
            android:textSize="14sp" />

    </RelativeLayout>

</ScrollView>